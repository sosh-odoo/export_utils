<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<template id="salesforce_credentials" inherit_id="data_fetcher_base.credentials_placeholder">
    <xpath expr="." position="inside">
        <div data-cred-block="salesforce" style="display:none">
            <h4>Salesforce Credentials</h4>
            <div class="form-group">
                <label>Client ID</label>
                <input type="text" name="sf_client_id" class="form-control" placeholder="3M..." />
                <label>Client Secret</label>
                <input type="text" name="sf_client_secret" class="form-control" placeholder="..." />
                <label>Username</label>
                <input type="text" name="sf_username" class="form-control" placeholder="cZTjg@example.com" />
                <label>Password</label>
                <input type="password" name="sf_password" class="form-control" />
                <label>Security Token</label>
                <input type="text" name="sf_security_token" class="form-control" placeholder="234..." />
            </div>
        </div>
    </xpath>
</template>

</odoo>