<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<template id="shopify_credentials" inherit_id="data_fetcher_base.credentials_placeholder">
    <xpath expr="." position="inside">
        <div data-cred-block="shopify" style="display:none">
            <h4>Shopify Credentials</h4>
            <div class="form-group">
                <label>Store URL</label>
                <input type="text" name="shopify_url" class="form-control" placeholder="https://example.myshopify.com" />
                <label>API Token</label>
                <input type="password" name="shopify_token" class="form-control" placeholder="shpat_..." />
            </div>
        </div>
    </xpath>
</template>
</odoo>
